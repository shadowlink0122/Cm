{
  "name": "cm-language",
  "displayName": "Cm Language Support",
  "description": "Syntax highlighting and language support for the Cm programming language",
  "version": "0.14.1",
  "publisher": "cm-lang",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "cm",
    "programming language",
    "syntax highlighting",
    "systems programming"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shadowlink0122/Cm"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "scripts": {
    "compile": "tsc -p ./",
    "update-version": "tsc -p ./ && node out/update-version.js",
    "verify-version": "tsc -p ./ && node out/verify-version.js",
    "prepackage": "npm run verify-version",
    "package": "pnpm exec vsce package --allow-missing-repository --skip-license",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write 'scripts/**/*.ts'",
    "format:check": "prettier --check 'scripts/**/*.ts'"
  },
  "contributes": {
    "languages": [
      {
        "id": "cm",
        "aliases": [
          "Cm",
          "cm"
        ],
        "extensions": [
          ".cm"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/icon.svg",
          "dark": "./images/icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "cm",
        "scopeName": "source.cm",
        "path": "./syntaxes/cm.tmLanguage.json"
      }
    ],
    "iconThemes": [
      {
        "id": "cm-icons",
        "label": "Cm Icons",
        "path": "./iconTheme.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "@eslint/js": "^9.0.0"
  }
}