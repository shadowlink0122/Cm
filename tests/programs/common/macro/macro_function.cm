// 関数マクロテスト
import std::io::println;

// 定数マクロ
macro int VERSION = 13;

// 関数マクロ - 引数なし
macro int*() get_version = () => VERSION;

// 関数マクロ - 引数あり
macro int*(int, int) add = (int a, int b) => a + b;
macro int*(int, int) mul = (int a, int b) => a * b;

int main() {
    println("=== Function Macro Test ===");

    // 引数なし関数マクロ
    int v = get_version();
    println(v);

    // 引数あり関数マクロ
    int sum = add(3, 5);
    println(sum);

    int product = mul(4, 6);
    println(product);

    // 関数マクロの組み合わせ
    int combined = add(mul(2, 3), 4);
    println(combined);

    println("=== Complete ===");
    return 0;
}
