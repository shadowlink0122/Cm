// Test: Local pointer array assignment (not function parameter)
import std::io;

int main() {
    int[3] data = [1, 2, 3];
    println("Before: {data[0]}, {data[1]}, {data[2]}");
    
    // Get pointer to array
    int* ptr = data;
    
    // Modify through pointer
    ptr[0] = 100;
    ptr[1] = 200;
    ptr[2] = 300;
    
    println("After: {data[0]}, {data[1]}, {data[2]}");
    return 0;
}
