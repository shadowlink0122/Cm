// tests/std/asm/instructions.cm
// std::asm CPU命令テスト

import std::io::println;
import std::asm::{nop, pause};

int main() {
    println("=== asm/instructions test ===");
    
    // nop命令テスト
    println("--- nop ---");
    nop();
    nop();
    nop();
    println("nop x3: ok");
    
    // pause命令テスト（スピンループ最適化）
    println("--- pause ---");
    pause();
    println("pause: ok");
    
    // 連続呼び出しテスト
    println("--- sequence ---");
    for (int i = 0; i < 5; i++) {
        nop();
    }
    println("nop loop: ok");
    
    println("=== instructions complete ===");
    return 0;
}
