import std::io::println;
// match式のテスト - 様々なパターン

enum Status {
    Ok = 0,
    Error = 1,
    Pending = 2
}

int main() {
    // 基本的なリテラルマッチ
    int x = 3;
    int result1 = match (x) {
        1 => 100,
        2 => 200,
        3 => 300,
        _ => 0,
    };
    println("match(3) = {result1}");
    
    // enum値マッチ（整数結果）
    int status = Status::Error;
    int code = match (status) {
        Status::Ok => 0,
        Status::Error => -1,
        Status::Pending => 1,
        _ => -99,
    };
    println("status code = {code}");
    
    // ワイルドカードパターン
    int y = 99;
    int result2 = match (y) {
        1 => 10,
        2 => 20,
        _ => 999,
    };
    println("match(99) = {result2}");
    
    return 0;
}
