// シンプルなFile I/Oテスト
import std::io::println;
import std::fs::{write_file, exists, remove};

int main() {
    string path = "/tmp/cm_simple_test.txt";

    // 書き込みのみテスト
    bool ok = write_file(path, "test");
    if (ok) {
        println("write: OK");
    } else {
        println("write: FAILED");
    }

    // 存在確認
    bool ex = exists(path);
    if (ex) {
        println("exists: OK");
        remove(path);
    }

    return 0;
}
