// 基本的な関数定義のテスト
import std::io::println;

// 引数あり、戻り値あり
int add(int a, int b) {
    return a + b;
}

// 複数引数
int sum3(int a, int b, int c) {
    return a + b + c;
}

// double引数と戻り値
double multiply(double x, double y) {
    return x * y;
}

int main() {
    int result = add(5, 3);
    println("5 + 3 = {}", result);

    int s = sum3(1, 2, 3);
    println("1 + 2 + 3 = {}", s);

    double m = multiply(2.5, 4.0);
    println("2.5 * 4.0 = {}", m);

    return 0;
}
