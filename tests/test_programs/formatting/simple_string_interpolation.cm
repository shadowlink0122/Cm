// 簡単な文字列補間のテスト（現在の実装で動作するもの）
import std::io::println;

int main() {
    // 位置引数による補間（現在動作）
    string name = "Alice";
    int age = 25;
    double height = 175.5;

    // 位置引数は動作する
    println("Name: {}, Age: {}, Height: {}", name, age, height);

    // 文字列変数の中での補間（変数を使う場合）
    string format1 = "User: {}, Years: {}";
    // この形式なら動作する（引数を明示的に渡す）
    println(format1, name, age);

    // フォーマット指定子付き
    int value = 255;
    println("Hex: {:x}, Binary: {:b}", value, value);

    // エスケープ
    println("Literal braces: {{ and }}");

    // TODO: 名前付きプレースホルダは未実装
