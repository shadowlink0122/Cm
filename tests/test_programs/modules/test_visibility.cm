// test_visibility.cm - 可視性テストのメインファイル

import visibility_test;

int main() {
    // パブリック要素は使用可能
    visibility_test::PublicStruct pub;
    pub.public_field = visibility_test::PUBLIC_CONST;

    int result = visibility_test::public_function();
    println("Public function result: {result}");

    int mixed = visibility_test::use_private_items();
    println("Mixed visibility result: {mixed}");

    // implのメソッドを使用
    int impl_result = pub.get_value();
    println("Impl method result: {impl_result}");

    // 以下はエラーになるべき（プライベート要素へのアクセス）
    // visibility_test::PrivateStruct priv;  // エラー
    // int x = visibility_test::private_function();  // エラー
    // int y = visibility_test::PRIVATE_CONST;  // エラー

    return 0;
}