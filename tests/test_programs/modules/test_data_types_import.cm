// test_data_types_import.cm - 様々なデータ型のインポートテスト

import data_types;

int main() {
    // 定数の使用
    float circumference = 2.0 * PI * 10.0;
    println("Circumference with radius 10: {circumference}");

    // 構造体の使用
    Point p1 = createPoint(3.0, 4.0);
    Point p2 = createPoint(6.0, 8.0);

    // インターフェースメソッドの使用
    p1.draw();
    p1.move(1.0, 1.0);
    p1.draw();

    // 関数の使用
    float dist = distance(p1, p2);
    println("Distance between points: {dist}");

    // グローバル変数の操作
    global_counter = global_counter + 1;
    println("Global counter: {global_counter}");

    // 列挙型の使用
    Color c = Color::Red;
    if (c == Color::Red) {
        println("Color is Red");
    }

    // 定数の使用
    if (global_counter < MAX_SIZE) {
        println("Counter is within MAX_SIZE");
    }

    return 0;
}