// test_basic_import.cm - 基本的なインポートテスト
// すべてのエクスポートをインポート

import math_utils;
import string_utils;

int main() {
    // math_utilsからインポートした定数を使用
    println("PI = {math_utils::PI}");
    println("E = {math_utils::E}");

    // math_utilsからインポートした構造体を使用
    math_utils::Vector2D v1;
    v1.x = 0.0;
    v1.y = 0.0;

    math_utils::Vector2D v2;
    v2.x = 3.0;
    v2.y = 4.0;

    // math_utilsからインポートした関数を使用
    double sum = math_utils::add(10.5, 20.5);
    println("10.5 + 20.5 = {sum}");

    double product = math_utils::multiply(3.0, 7.0);
    println("3.0 * 7.0 = {product}");

    double dist = math_utils::distance(v1, v2);
    println("Distance: {dist}");

    // string_utilsからインポートした関数を使用
    string hello = "Hello";
    string world = "World";
    string combined = string_utils::concat(hello, world);
    println("Concat: {combined}");

    int len = string_utils::strlen(hello);
    println("Length of 'Hello': {len}");

    // string_utilsからインポートした構造体を使用
    string_utils::StringBuilder sb;
    sb.buffer = "Test String";
    sb.length = 11;

    // Stringableインターフェースのメソッドを呼び出し
    string result = sb.to_string();
    println("StringBuilder result: {result}");

    return 0;
}