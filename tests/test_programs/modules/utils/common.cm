// 共通構造体
export struct Config {
    string name;
    int value;
    bool enabled;
};

// ユーティリティ関数
export void print_config(Config cfg) {
    println("Config: {cfg.name}");
    println("  Value: {cfg.value}");
    println("  Enabled: {cfg.enabled}");
}

export Config create_default_config() {
    Config cfg;
    cfg.name = "default";
    cfg.value = 42;
    cfg.enabled = true;
    return cfg;
}

