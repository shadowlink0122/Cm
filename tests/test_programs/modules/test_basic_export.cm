// v4モジュールシステムのテスト：基本的なエクスポート

// トップレベル宣言
struct Point {
    float x;
    float y;
}

float distance(Point a, Point b) {
    float dx = a.x - b.x;
    float dy = a.y - b.y;
    // TODO: 実際のsqrt実装またはextern宣言が必要
    return dx * dx + dy * dy;  // 一時的に平方距離を返す
}

const float PI = 3.14159;
const float E = 2.71828;

// 内部関数（エクスポートされない）
float internal_helper(float x) {
    return x * x;
}

// v4形式のエクスポート（名前のみを列挙）
export Point;
export distance;
export PI, E;
// internal_helper はエクスポートされない