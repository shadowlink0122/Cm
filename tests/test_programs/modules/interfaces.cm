// interfaces.cm - インターフェースとenumのエクスポートテスト

// 列挙型のエクスポート
export enum Status {
    Success,
    Error,
    Pending
}

// インターフェースのエクスポート
export interface Drawable {
    void draw();
    float getArea();
}

// 構造体のエクスポート
export struct Circle {
    float x;
    float y;
    float radius;
}

// インターフェースの実装（暗黙的エクスポート）
impl Drawable for Circle {
    void draw() {
        println("Drawing circle at ({this.x}, {this.y}) with radius {this.radius}");
    }

    float getArea() {
        return 3.14159 * this.radius * this.radius;
    }
}

// ヘルパー関数
export Circle makeCircle(float x, float y, float radius) {
    Circle c;
    c.x = x;
    c.y = y;
    c.radius = radius;
    return c;
}

export Status checkStatus(int code) {
    if (code == 0) {
        return Status::Success;
    }
    if (code < 0) {
        return Status::Error;
    }
    return Status::Pending;
}