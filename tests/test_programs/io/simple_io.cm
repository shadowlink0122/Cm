// シンプルなファイルI/Oテスト
import std::io::println;
import std::io::file::io::{read_file, write_file};

int main() {
    println("=== Simple File I/O Test ===");

    // テストフォルダ内のデータファイルを使用
    string data_path = "tests/test_programs/io/data/simple_io_data.txt";
    string content = "Hello from std::io!";

    // 1. 書き込み
    bool ok = write_file(data_path, content);
    if (ok) {
        println("Write: PASS");
    } else {
        println("Write: FAIL");
        return 1;
    }

    // 2. 読み込み
    string read_content = read_file(data_path);
    println("Read: {read_content}");

    // 3. 内容確認
    if (read_content == content) {
        println("Content matches: PASS");
    } else {
        println("Content mismatch: FAIL");
        return 1;
    }

    println("=== All Tests Passed ===");
    return 0;
}
