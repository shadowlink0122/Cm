// tests/test_programs/asm/asm_arithmetic.cm
// x86-64 算術命令のテスト

import std::io::println;

int main() {
    int a = 10;
    int b = 20;

    // 加算命令
    asm("add {a}, {b}");
    println("asm: add instruction");

    // 減算命令
    asm("sub {b}, {a}");
    println("asm: sub instruction");

    // 乗算命令
    asm("imul {a}, {b}");
    println("asm: imul instruction");

    // インクリメント/デクリメント
    asm("inc %rax");
    println("asm: inc instruction");

    asm("dec %rbx");
    println("asm: dec instruction");

    // 符号反転
    asm("neg %rcx");
    println("asm: neg instruction");

    return 0;
}
