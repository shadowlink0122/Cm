import std::io::println;

int main() {
    // 基本的なwhileループ
    println("Basic while loop:");
    int i = 0;
    while (i < 5) {
        println("i = " + i);
        i++;
    }

    // 条件付きwhileループ
    println("\nConditional while:");
    int n = 10;
    while (n > 0) {
        if (n % 2 == 0) {
            println(n + " is even");
        }
        n--;
    }

    // breakを使った無限ループ
    println("\nInfinite loop with break:");
    int count = 0;
    while (true) {
        println("count = " + count);
        count++;
        if (count >= 3) {
            break;
        }
    }

    // ネストされたwhileループ
    println("\nNested while loops:");
    int x = 0;
    while (x < 3) {
        int y = 0;
        while (y < 3) {
            println("x=" + x + ", y=" + y);
            y++;
        }
        x++;
    }

    return 0;
}
