// Result型の基本テスト
import std::io::println;
import std::result::*;

// typedefを使ったResult型エイリアス
typedef IntResult = Result<int, string>;

// 安全な除算関数
IntResult safe_divide(int a, int b) {
    if (b == 0) {
        return Result::Err("Division by zero");
    }
    return Result::Ok(a / b);
}

int main() {
    println("=== Result Basic Test ===");
    
    // 成功ケース
    IntResult r1 = safe_divide(10, 2);
    match (r1) {
        Result::Ok(v) => { println("10 / 2 = {v}"); }
        Result::Err(e) => { println("Error: {e}"); }
    }
    
    // 失敗ケース
    IntResult r2 = safe_divide(10, 0);
    match (r2) {
        Result::Ok(v) => { println("10 / 0 = {v}"); }
        Result::Err(e) => { println("Error: {e}"); }
    }
    
    println("=== PASS ===");
    return 0;
}
