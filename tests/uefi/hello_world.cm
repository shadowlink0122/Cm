// UEFI Hello World
// ビルド: make / 実行: make run

import uefi::table::*;
import uefi::text::*;
import uefi::types::*;

ulong efi_main(EfiHandle image_handle, EfiSystemTable* system_table) {
    uefi_clear_screen(system_table);
    uefi_println(system_table, "Hello from Cm!");

    // 停止（画面を維持）
    while (true) {
        __asm__("hlt");
    }

    return 0;
}
