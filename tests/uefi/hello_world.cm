// UEFI Hello World - ローカルモジュール使用版
// ビルド: cd tests/uefi && make && make run

import libs::efi_text::*;

ulong efi_main(void* image_handle, void* system_table) {
    efi_clear_screen(system_table);
    efi_println(system_table, "Hello from Cm!");

    // 停止（画面を維持）
    while (true) {
        __asm__("hlt");
    }

    return 0;
}
