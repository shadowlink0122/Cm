// 算術演算テスト
int test_arithmetic() {
    // 整数演算
    int a = 100;
    int b = 50;

    int add = a + b;      // 150
    int sub = a - b;      // 50
    int mul = a * b;      // 5000
    int div = a / b;      // 2
    int mod = a % 3;      // 1

    // 浮動小数点演算
    float x = 3.14;
    float y = 2.0;

    float f_add = x + y;  // 5.14
    float f_sub = x - y;  // 1.14
    float f_mul = x * y;  // 6.28
    float f_div = x / y;  // 1.57

    // ビット演算
    int bits_a = 0b1010;  // 10
    int bits_b = 0b1100;  // 12

    int and_result = bits_a & bits_b;  // 0b1000 = 8
    int or_result = bits_a | bits_b;   // 0b1110 = 14
    int xor_result = bits_a ^ bits_b;  // 0b0110 = 6
    int shl_result = bits_a << 2;      // 0b101000 = 40
    int shr_result = bits_b >> 1;      // 0b0110 = 6

    // 結果の確認
    if (add == 150 && sub == 50 && mul == 5000) {
        return 0;  // 成功
    }

    return 1;  // エラー
}

int main() {
    return test_arithmetic();
}