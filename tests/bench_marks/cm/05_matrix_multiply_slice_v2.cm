// ベンチマーク5: 行列乗算（スライス版v2）
// 500x500の行列同士を乗算 - C++/Rustと同じデータ構造で比較

import std::io;

use libc {
    void* malloc(ulong size);
    void free(void* ptr);
}

// 1次元配列をラップした行列クラス
struct Matrix {
    int* data;
    int size;
}

Matrix create_matrix(int n) {
    int size = n * n;
    void* mem = malloc(size * sizeof(int));
    return Matrix{data: mem as int*, size: size};
}

void free_matrix(Matrix* m) {
    free(m->data as void*);
}

// 行列要素へのアクセス関数
int get_element(Matrix* m, int n, int i, int j) {
    return m->data[i * n + j];
}

void set_element(Matrix* m, int n, int i, int j, int value) {
    m->data[i * n + j] = value;
}

// 行列の初期化
void init_matrix(Matrix* a, Matrix* b, Matrix* c, int n) {
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            set_element(a, n, i, j, (i + j) % 100);
            set_element(b, n, i, j, (i - j + 100) % 100);
            set_element(c, n, i, j, 0);
        }
    }
}

// 行列乗算（標準IJK順）- ベースライン
void matrix_multiply_ijk(Matrix* a, Matrix* b, Matrix* c, int n) {
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            int sum = 0;
            for (int k = 0; k < n; k++) {
                sum = sum + get_element(a, n, i, k) * get_element(b, n, k, j);
            }
            set_element(c, n, i, j, sum);
        }
    }
}

// 行列乗算（キャッシュ効率的IKJ順）
void matrix_multiply_ikj(Matrix* a, Matrix* b, Matrix* c, int n) {
    // IKJ順で乗算（キャッシュ効率向上）
    for (int i = 0; i < n; i++) {
        for (int k = 0; k < n; k++) {
            int a_ik = get_element(a, n, i, k);
            for (int j = 0; j < n; j++) {
                int idx_ij = i * n + j;
                int idx_kj = k * n + j;
                c->data[idx_ij] = c->data[idx_ij] + a_ik * b->data[idx_kj];
            }
        }
    }
}

// 行列乗算（直接ポインタアクセス版）
void matrix_multiply_direct(Matrix* a, Matrix* b, Matrix* c, int n) {
    int* ap = a->data;
    int* bp = b->data;
    int* cp = c->data;

    // 結果行列を0クリア（重要！）
    for (int i = 0; i < n * n; i++) {
        cp[i] = 0;
    }

    // IKJ順で乗算
    for (int i = 0; i < n; i++) {
        for (int k = 0; k < n; k++) {
            int a_ik = ap[i * n + k];
            for (int j = 0; j < n; j++) {
                cp[i * n + j] = cp[i * n + j] + a_ik * bp[k * n + j];
            }
        }
    }
}

int main() {
    int n = 500;
    println("Multiplying {n}x{n} matrices using struct wrapper...");

    // 行列の作成
    Matrix a = create_matrix(n);
    Matrix b = create_matrix(n);
    Matrix c = create_matrix(n);

    // 初期化
    init_matrix(&a, &b, &c, n);

    // 行列乗算（直接ポインタアクセス版）
    matrix_multiply_direct(&a, &b, &c, n);

    // 結果の一部を表示（検証用）
    println("Result c[0][0] = {c.data[0]}");
    int last_idx = (n-1) * n + (n-1);
    println("Result c[n-1][n-1] = {c.data[last_idx]}");

    // メモリ解放
    free_matrix(&a);
    free_matrix(&b);
    free_matrix(&c);

    println("Matrix multiplication completed");
    return 0;
}