// ベンチマーク5: 行列乗算（スライス版）
// 500x500の行列同士を乗算 - C++/Rustと同じデータ構造で比較

import std::io;

// 2次元行列をスライスで表現
struct Matrix {
    int[][] data;
    int rows;
    int cols;
}

// 行列の作成
Matrix create_matrix(int rows, int cols) {
    int[][] data = [];
    for (int i = 0; i < rows; i++) {
        int[] row = [];
        for (int j = 0; j < cols; j++) {
            row.push(0);
        }
        data.push(row);
    }
    return Matrix{data: data, rows: rows, cols: cols};
}

// 行列の初期化
void init_matrix(Matrix* a, Matrix* b, int n) {
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            a->data[i][j] = (i + j) % 100;
            b->data[i][j] = (i - j + 100) % 100;
        }
    }
}

// 行列乗算（標準IJK順）
void matrix_multiply_ijk(Matrix* a, Matrix* b, Matrix* c, int n) {
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            int sum = 0;
            for (int k = 0; k < n; k++) {
                sum = sum + a->data[i][k] * b->data[k][j];
            }
            c->data[i][j] = sum;
        }
    }
}

// 行列乗算（キャッシュ効率的IKJ順）
void matrix_multiply_ikj(Matrix* a, Matrix* b, Matrix* c, int n) {
    // 結果行列を0クリア
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            c->data[i][j] = 0;
        }
    }

    // IKJ順で乗算
    for (int i = 0; i < n; i++) {
        for (int k = 0; k < n; k++) {
            int a_ik = a->data[i][k];
            for (int j = 0; j < n; j++) {
                c->data[i][j] = c->data[i][j] + a_ik * b->data[k][j];
            }
        }
    }
}

int main() {
    int n = 500;
    println("Multiplying {n}x{n} matrices using slices...");

    // 行列の作成
    Matrix a = create_matrix(n, n);
    Matrix b = create_matrix(n, n);
    Matrix c = create_matrix(n, n);

    // 初期化
    init_matrix(&a, &b, n);

    // 行列乗算（IKJ順を使用）
    matrix_multiply_ikj(&a, &b, &c, n);

    // 結果の一部を表示（検証用）
    println("Result c[0][0] = {c.data[0][0]}");
    println("Result c[n-1][n-1] = {c.data[n-1][n-1]}");

    println("Matrix multiplication completed");
    return 0;
}