// ベンチマーク5: 行列乗算
// 500x500の行列同士を乗算

import std::io;

use libc {
    void* malloc(ulong size);
    void free(void* ptr);
}

void matrix_multiply(int n) {
    // ヒープ割り当て（スタックオーバーフロー回避）
    ulong size = n * n * sizeof(int);
    void* mem_a = malloc(size);
    void* mem_b = malloc(size);
    void* mem_c = malloc(size);

    int* a = mem_a as int*;
    int* b = mem_b as int*;
    int* c = mem_c as int*;

    // 行列初期化
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            int idx = i * n + j;
            a[idx] = (i + j) % 100;
            b[idx] = (i - j + 100) % 100;
            c[idx] = 0;
        }
    }

    // 行列乗算（キャッシュ効率的なIKJ順）
    for (int i = 0; i < n; i++) {
        for (int k = 0; k < n; k++) {
            int a_ik = a[i * n + k];
            for (int j = 0; j < n; j++) {
                c[i * n + j] = c[i * n + j] + a_ik * b[k * n + j];
            }
        }
    }

    // 結果の一部を表示（検証用）
    int idx_00 = 0;
    int idx_nn = (n-1) * n + (n-1);
    println("Result c[0][0] = {c[idx_00]}");
    println("Result c[n-1][n-1] = {c[idx_nn]}");

    // メモリ解放
    free(mem_a);
    free(mem_b);
    free(mem_c);
}

int main() {
    int n = 500;
    println("Multiplying {n}x{n} matrices...");

    matrix_multiply(n);

    println("Matrix multiplication completed");
    return 0;
}