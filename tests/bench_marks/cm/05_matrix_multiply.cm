// ベンチマーク5: 行列乗算
// 500x500の行列同士を乗算

import std::io;

void matrix_multiply(int n) {
    int[500][500] a;
    int[500][500] b;
    int[500][500] c;

    // 行列初期化
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            a[i][j] = (i + j) % 100;
            b[i][j] = (i - j + 100) % 100;
            c[i][j] = 0;
        }
    }

    // 行列乗算
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            int sum = 0;
            for (int k = 0; k < n; k++) {
                sum = sum + a[i][k] * b[k][j];
            }
            c[i][j] = sum;
        }
    }

    // 結果の一部を表示（検証用）
    println("Result c[0][0] = {c[0][0]}");
    println("Result c[n-1][n-1] = {c[n-1][n-1]}");
}

int main() {
    int n = 500;
    println("Multiplying {n}x{n} matrices...");

    matrix_multiply(n);

    println("Matrix multiplication completed");
    return 0;
}