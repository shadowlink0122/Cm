// ベンチマーク5: 行列乗算（2次元配列版）
// 500x500の行列同士を乗算 - 真の2次元配列を使用

import std::io;

void matrix_multiply(int n) {
    // 2次元配列として宣言（スタック上）
    int[500][500] a;
    int[500][500] b;
    int[500][500] c;

    // 行列初期化
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            a[i][j] = (i + j) % 100;
            b[i][j] = (i - j + 100) % 100;
            c[i][j] = 0;
        }
    }

    // 行列乗算（標準的なIJK順）
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            int sum = 0;
            for (int k = 0; k < n; k++) {
                sum = sum + a[i][k] * b[k][j];
            }
            c[i][j] = sum;
        }
    }

    // 結果の一部を表示（検証用）
    println("Result c[0][0] = {c[0][0]}");
    println("Result c[n-1][n-1] = {c[n-1][n-1]}");
}

// IKJ順版（キャッシュ最適化）
void matrix_multiply_ikj(int n) {
    // 2次元配列として宣言
    int[500][500] a;
    int[500][500] b;
    int[500][500] c;

    // 行列初期化
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            a[i][j] = (i + j) % 100;
            b[i][j] = (i - j + 100) % 100;
            c[i][j] = 0;
        }
    }

    // 行列乗算（IKJ順）
    for (int i = 0; i < n; i++) {
        for (int k = 0; k < n; k++) {
            int a_ik = a[i][k];
            for (int j = 0; j < n; j++) {
                c[i][j] = c[i][j] + a_ik * b[k][j];
            }
        }
    }

    // 結果の一部を表示（検証用）
    println("Result c[0][0] = {c[0][0]}");
    println("Result c[n-1][n-1] = {c[n-1][n-1]}");
}

// ブロック化版（キャッシュタイリング）
void matrix_multiply_blocked(int n) {
    // 2次元配列として宣言
    int[500][500] a;
    int[500][500] b;
    int[500][500] c;

    // 行列初期化
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            a[i][j] = (i + j) % 100;
            b[i][j] = (i - j + 100) % 100;
            c[i][j] = 0;
        }
    }

    // ブロックサイズ（L1キャッシュに収まるサイズ）
    int block_size = 64;

    // ブロック化した行列乗算
    for (int ii = 0; ii < n; ii = ii + block_size) {
        for (int kk = 0; kk < n; kk = kk + block_size) {
            for (int jj = 0; jj < n; jj = jj + block_size) {
                // ブロック内の計算
                int i_end = ii + block_size;
                if (i_end > n) {
                    i_end = n;
                }

                int k_end = kk + block_size;
                if (k_end > n) {
                    k_end = n;
                }

                int j_end = jj + block_size;
                if (j_end > n) {
                    j_end = n;
                }

                for (int i = ii; i < i_end; i++) {
                    for (int k = kk; k < k_end; k++) {
                        int a_ik = a[i][k];
                        for (int j = jj; j < j_end; j++) {
                            c[i][j] = c[i][j] + a_ik * b[k][j];
                        }
                    }
                }
            }
        }
    }

    // 結果の一部を表示（検証用）
    println("Result c[0][0] = {c[0][0]}");
    println("Result c[n-1][n-1] = {c[n-1][n-1]}");
}

int main() {
    int n = 500;

    // 各バージョンをテスト
    println("=== Matrix Multiplication with 2D Arrays ===");

    println("\n1. Standard IJK order:");
    println("Multiplying {n}x{n} matrices...");
    matrix_multiply(n);

    println("\n2. Cache-optimized IKJ order:");
    println("Multiplying {n}x{n} matrices...");
    matrix_multiply_ikj(n);

    println("\n3. Blocked (tiled) version:");
    println("Multiplying {n}x{n} matrices...");
    matrix_multiply_blocked(n);

    println("\nMatrix multiplication completed");
    return 0;
}