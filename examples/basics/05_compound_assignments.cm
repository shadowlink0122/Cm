// 5. 複合代入演算子（HIRで脱糖される）
int main() {
    int x = 10;

    // 複合代入演算子（内部的に x = x + 5 に変換）
    x += 5;  // x = 15
    print(x);

    x -= 3;  // x = 12
    print(x);

    x *= 2;  // x = 24
    print(x);

    x /= 4;  // x = 6
    print(x);

    x %= 4;  // x = 2
    print(x);

    // ビット演算子
    int bits = 0b1010;
    bits |= 0b0101;  // bits = 0b1111
    bits &= 0b1100;  // bits = 0b1100
    bits ^= 0b0110;  // bits = 0b1010

    return 0;
}