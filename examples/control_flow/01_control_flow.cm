// 3. 制御フロー - if文とループ
import std::io::println;

int main() {
    int n = 10;

    // if-else文
    if (n > 0) {
        println("Positive");
    } else if (n < 0) {
        println("Negative");
    } else {
        println("Zero");
    }

    // while文
    int i = 0;
    while (i < 5) {
        println("i = {i}");
        i = i + 1;
    }

    // for文（内部的にwhileに変換される）
    for (int j = 0; j < 5; j = j + 1) {
        int result = j * 2;
        println("j * 2 = {result}");
    }

    return 0;
}